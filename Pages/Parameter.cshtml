@page
@model Prelab5.Pages.ParameterModel
@{
}

<h1 class="text-center">Basic Calculator</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="text-center">
                <div class="input-group mb-3">
                    <input type="number" class="form-control" placeholder="Enter first number" name="firstNumber" required>
                    <input type="number" class="form-control" placeholder="Enter second number" name="secondNumber" required>
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary" name="operation" value="add">+</button>
                        <button type="submit" class="btn btn-primary" name="operation" value="subtract">-</button>
                        <button type="submit" class="btn btn-primary" name="operation" value="multiply">*</button>
                        <button type="submit" class="btn btn-primary" name="operation" value="divide">/</button>
                    </div>
                </div>
                 @if (!ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var modelState in ModelState.Values)
                        {
                            foreach (var error in modelState.Errors)
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        }
                    </div>
                }
            </form>
        </div>
    </div>
    @if(Model.Result.HasValue)
    {
        <div class="row justify-content-center mt-3">
            <div class="col-md-6">
                <p class="text-center">Result: @Model.Result</p>
            </div>
        </div>
    }
</div>